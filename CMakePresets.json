{
  "version": 9,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build/${presetName}",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "BUILD_TOOLS": "ON"
      },
      "hidden": true
    },
    {
      "name": "debug",
      "displayName": "Debug Config",
      "inherits": [
        "default"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "hidden": true
    },
    {
      "name": "release",
      "displayName": "Release Config",
      "inherits": [
        "default"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "hidden": true
    },
    {
      "name": "debug-windows",
      "inherits": [
        "debug"
      ],
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows-static"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "release-windows",
      "inherits": [
        "release"
      ],
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows-static"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "release-windows-clang",
      "inherits": [
        "release-windows"
      ],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang.exe",
        "CMAKE_LINKER": "lld-link.exe",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "VCPKG_TARGET_TRIPLET": "x64-windows-clang-static",
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/cmake/vcpkg"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "debug-windows-clang",
      "inherits": [
        "debug-windows"
      ],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang.exe",
        "CMAKE_LINKER": "lld-link.exe",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "VCPKG_TARGET_TRIPLET": "x64-windows-clang-static",
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/cmake/vcpkg"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug-windows",
      "configurePreset": "debug-windows",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "release-windows",
      "configurePreset": "release-windows",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "release-windows-clang",
      "configurePreset": "release-windows-clang",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "debug-windows-clang",
      "configurePreset": "debug-windows-clang",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ]
}
